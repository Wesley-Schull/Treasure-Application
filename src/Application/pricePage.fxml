<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="Application.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" vgap="10" hgap="10">
    <padding>
        <Insets left="15" right="15" top="15" bottom="15"/>
    </padding>
    <Text text="Enter the item price below." style="-fx-font: BOLD 16 Tahoma;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="Gold:" style="-fx-font: NORMAL 12 Tahoma;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="balanceGoldTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Silver:" style="-fx-font: NORMAL 12 Tahoma;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="balanceSilverTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Copper:" style="-fx-font: NORMAL 12 Tahoma;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="balanceCopperTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button fx:id="submitPriceButton" text="Submit" onAction="#submitPriceButtonPressed" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>